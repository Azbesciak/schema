{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "buildings/footprint.yaml",
  "title": "Overture Maps Building Footprint Schema",
  "description": "Additive schema for building footprints",
  "type": "object",
  "properties": {
    "geometry": {
      "unevaluatedProperties": false,
      "oneOf": [
        {
          "$ref": "https://geojson.org/schema/Polygon.json"
        },
        {
          "$ref": "https://geojson.org/schema/MultiPolygon.json"
        }
      ]
    },
    "properties": {
      "unevaluatedProperties": false,
      "allOf": [
        {
          "$ref": "http://localhost:3000/schema/defs.json#/$defs/propertyContainers/overtureFeaturePropertiesContainer"
        },
        {
          "$ref": "http://localhost:3000/schema/defs.json#/$defs/propertyContainers/levelContainer"
        }
      ],
      "properties": {
        "name": {
          "$ref": "http://localhost:3000/schema/defs.json#/$defs/propertyDefinitions/name"
        }
      }
    }
  }
}