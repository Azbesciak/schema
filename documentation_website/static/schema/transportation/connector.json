{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "transportation/connector.yaml",
  "title": "Overture Maps Transportation Connector Schema",
  "description": "Additive schema for transportation connectors",
  "type": "object",
  "properties": {
    "geometry": {
      "unevaluatedProperties": false,
      "allOf": [
        {
          "$ref": "https://geojson.org/schema/Point.json"
        }
      ]
    },
    "properties": {
      "unevaluatedProperties": false,
      "allOf": [
        {
          "$ref": "http://localhost:3000/schema/defs.json#/$defs/propertyContainers/overtureFeaturePropertiesContainer"
        },
        {
          "$ref": "http://localhost:3000/schema/defs.json#/$defs/propertyContainers/levelContainer"
        }
      ]
    }
  }
}