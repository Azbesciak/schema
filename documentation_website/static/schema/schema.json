{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schema.yaml",
  "title": "Overture Maps Feature Schema",
  "description": "Prototype schema for Overture Maps Foundation map entities as GeoJSON schemas.",
  "type": "object",
  "unevaluatedProperties": false,
  "allOf": [
    {
      "$ref": "https://geojson.org/schema/Feature.json",
      "$comment": "Every Overture feature IS A GeoJSON feature"
    }
  ],
  "oneOf": [
    {
      "if": {
        "properties": {
          "properties": {
            "properties": {
              "theme": {
                "enum": [
                  "buildings"
                ]
              },
              "type": {
                "enum": [
                  "footprint"
                ]
              }
            }
          }
        }
      },
      "then": {
        "$ref": "http://localhost:3000/schema/buildings/footprint.json"
      },
      "else": {
        "propertyNames": false
      }
    },
    {
      "if": {
        "description": "# Transportation Connectors",
        "properties": {
          "properties": {
            "properties": {
              "theme": {
                "enum": [
                  "transportation"
                ]
              },
              "type": {
                "enum": [
                  "connector"
                ]
              }
            }
          }
        }
      },
      "then": {
        "$ref": "http://localhost:3000/schema/transportation/connector.json"
      },
      "else": {
        "propertyNames": false
      }
    },
    {
      "if": {
        "description": "# Transportation Segments",
        "properties": {
          "properties": {
            "properties": {
              "theme": {
                "enum": [
                  "transportation"
                ]
              },
              "type": {
                "enum": [
                  "segment"
                ]
              }
            }
          }
        }
      },
      "then": {
        "$ref": "http://localhost:3000/schema/transportation/segment.json"
      },
      "else": {
        "propertyNames": false
      }
    }
  ]
}